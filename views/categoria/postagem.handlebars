<h1>Categoria: {{categoria.nome}}</h1>

{{#each postagens}}
<div class="card mt-3">
    <div class="card-body">
        
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>
       
        <Small>Data de publicação: {{data}}</Small>
       
       
    </div>
</div>
{{else}}
    <h5>Nenhuma Postagens</h5>
{{/each}}