<h1>Lista de categorias:</h1>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>
{{#each categorias}}
    <div class="card my-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>slug: {{slug}}</small><br>
            <small>Data de criação: {{data}}</small><br>
            <a href="/admin/categoria/edit/{{_id}}"><button class="btn btn-success mt-4">Editar Categoria</button></a>

            <form action="/admin/categorias/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
            </form>
            
        </div>
    </div>
 {{else}}
    <h4 class="mt-3">Nenhuma categoria registrada</h4>
{{/each}}
